<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.administration.PestaÃ±aBajaAlta"
    >


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_marginBottom="393dp"
        android:gravity="center">

        <TableRow
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:id="@+id/nombreBaja"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/apellidoBaja"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:ems="10"
                android:hint="Apellido"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:id="@+id/textoDNI"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:ems="10"
                android:hint="DNI"
                android:inputType="numberSigned" />

            <Button
                android:id="@+id/botonBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Buscar" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout

                android:id="@+id/tablaEliminar"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:layout_span="2"
                android:layout_weight="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView

                        android:id="@+id/textView17"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Nombre"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/textView18"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Apellido"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/textView19"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="DNI"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Estado"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/suspenderBoton"
        android:layout_width="136dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Suspender/Reactivar" />

</LinearLayout>